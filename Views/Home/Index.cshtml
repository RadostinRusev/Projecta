@model Projecta.ViewModels.loanmodel.IndexVM;
@using Projecta.Entity;
@{
    ViewBag.Title = "Users Management";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <a href="~/Home/Create">New</a>
    <fieldset style="text-align:center;">
        <div class="row">Loans</div>
        <hr />
        <div class="grid">
            <div class="row">
                <div class="col-2 dis ral">EGN</div>
                <div class="col-2 dis ral">Amount</div>
                <div class="col-2 dis ral">First Name</div>
                <div class="col-2 dis ral">Last Name</div>


            </div>
            @foreach (Loan item in Model.Items)
            {
        <div class="row">
            <div class="col-2 dis ral">@item.EGN</div>
            <div class="col-2 dis ral">@item.Amount</div>
            <div class="col-2 dis ral">@item.FirstName</div>
            <div class="col-2 dis ral">@item.LastName</div>

            <div class="col-2 dis ral">
                <a href="/Home/Edit?id=@item.Id">edit</a>
                <a href="/Home/Delete?id=@item.Id">delete</a>
            </div>
        </div>
            }
        </div>
    </fieldset>
</body>
</html>